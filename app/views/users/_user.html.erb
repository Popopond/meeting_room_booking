<div id="<%= dom_id user %>" class="bg-white p-4 rounded-lg shadow mb-4">
  <div class="grid grid-cols-1 gap-4">
    <div class="flex items-center">
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar, class: "w-12 h-12 rounded-full mr-4" %>
      <% else %>
        <div class="w-12 h-12 rounded-full bg-violet-100 flex items-center justify-center mr-4">
          <span class="text-violet-600 font-medium text-lg"><%= user.username[0].upcase %></span>
        </div>
      <% end %>
      <div>
        <h3 class="text-lg font-medium text-gray-900"><%= user.username %></h3>
        <p class="text-sm text-gray-500"><%= user.email %></p>
      </div>
    </div>

    <div class="text-sm text-gray-500">
      <p class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        สมัครสมาชิกเมื่อ: <%= l user.created_at, format: :long, locale: :th %>
      </p>
      
      <% if user.role.present? %>
        <p class="flex items-center mt-2">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          สิทธิ์: <%= user.role %>
        </p>
      <% end %>
    </div>
  </div>
</div>
