<% content_for :title, "แก้ไขการจอง" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-bold text-gray-800">แก้ไขการจอง</h1>
    <div class="flex items-center space-x-4">
      <%= link_to @booking, class: "text-violet-600 hover:text-violet-800 flex items-center" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        ดูรายละเอียด
      <% end %>
      <%= link_to bookings_path, class: "text-violet-600 hover:text-violet-800 flex items-center" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        กลับไปรายการจอง
      <% end %>
    </div>
  </div>

  <%= render "form", booking: @booking %>
</div>
