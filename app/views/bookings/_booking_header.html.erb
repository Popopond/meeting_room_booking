<div class="flex justify-between items-start mb-6">
  <div>
    <h1 class="text-2xl font-bold mb-2">ห้อง <%= @booking.room.name %></h1>
    <p class="text-gray-600">วันที่: <%= @booking.start_time.strftime("%d/%m/%Y") %></p>
    <p class="text-gray-600">เวลา: <%= @booking.start_time.strftime("%H:%M") %> - <%= @booking.end_time.strftime("%H:%M") %></p>
  </div>
  <div class="text-right">
    <span class="px-3 py-1 rounded-full text-sm <%= @booking.complete ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
      <%= @booking.status %>
    </span>
  </div>
</div> 