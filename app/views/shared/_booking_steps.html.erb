<%
  # Define current step based on current page
  current_step = case controller_name
                when 'home'
                  1
                when 'bookings'
                  if action_name == 'new' || action_name == 'create'
                    2
                  elsif @booking&.complete
                    3
                  else
                    2
                  end
                else
                  1
                end

  # Define tutorial content for each step
  tutorial_content = {
    1 => {
      title: "เลือกเวลาจองห้องประชุม",
      description: "คลิกที่ช่องเวลาว่างที่คุณต้องการในตารางด้านล่าง คุณสามารถเลือกหลายช่องเวลาติดกันได้",
      tips: [
        "เลือกห้องประชุมที่ต้องการจากคอลัมน์ด้านบน",
        "ช่องสีเขียวคือเวลาที่ว่าง สามารถจองได้",
        "ช่องสีน้ำเงินคือเวลาที่มีคนจองแล้ว"
      ]
    },
    2 => {
      title: "กรอกรายละเอียดการจอง",
      description: "ตรวจสอบข้อมูลการจองและเพิ่มรายละเอียดเพิ่มเติม",
      tips: [
        "ตรวจสอบห้องและเวลาที่เลือกให้ถูกต้อง",
        "เพิ่มผู้เข้าร่วมประชุมได้ตามต้องการ",
        "จะได้รับรหัสยืนยันหลังจากจองเสร็จ"
      ]
    },
    3 => {
      title: "เช็คอินเข้าห้องประชุม",
      description: "ในวันประชุม กรุณาเช็คอินภายใน 15 นาทีหลังจากเวลาเริ่มต้น",
      tips: [
        "กดปุ่มเช็คอินเมื่อถึงเวลาประชุม",
        "หากไม่เช็คอินภายใน 15 นาที การจองจะถูกยกเลิก",
        "สามารถเพิ่มผู้เข้าร่วมได้แม้หลังเช็คอิน"
      ]
    }
  }

  current_tutorial = tutorial_content[current_step]
%>

<div class="mb-8 relative">
  <div class="max-w-3xl mx-auto">
    <!-- Tutorial Box -->
    <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-violet-500">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">
            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-violet-500 text-white text-sm font-bold mr-2"><%= current_step %></span>
            <%= current_tutorial[:title] %>
          </h2>
          <p class="text-gray-600 mb-4"><%= current_tutorial[:description] %></p>
        </div>
        
        <!-- Progress indicator -->
        <div class="flex items-center gap-1">
          <% (1..3).each do |step| %>
            <div class="w-2 h-2 rounded-full <%= step <= current_step ? 'bg-violet-500' : 'bg-gray-300' %>"></div>
          <% end %>
        </div>
      </div>

      <!-- Tips Section -->
      <div class="mt-4 bg-violet-50 rounded-lg p-4">
        <h3 class="font-medium text-violet-800 mb-2">เคล็ดลับ:</h3>
        <ul class="space-y-2">
          <% current_tutorial[:tips].each do |tip| %>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-violet-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-violet-800"><%= tip %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Visual Progress Bar -->
    <div class="mt-6 bg-gray-200 h-2 rounded-full overflow-hidden">
      <div class="h-full bg-violet-500 transition-all duration-500" style="width: <%= (current_step.to_f / 3 * 100).to_i %>%;"></div>
    </div>
  </div>
</div> 