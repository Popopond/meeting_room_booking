<div class="flex justify-between items-center py-4 px-6">
  <h1 class="text-2xl font-bold">Meeting Room Booking</h1>
  <div class="flex items-center gap-3" data-controller="date-selector" data-turbo="false">
    <div class="flex items-center gap-2 h-10 px-4 rounded-[20px] border border-gray-200 bg-white shadow-[0_2px_4px_rgba(0,0,0,0.05)]" data-turbo="false">
      <%= render "shared/icons/calendar" %>
      <input type="date" 
             class="border-none bg-transparent focus:outline-none cursor-pointer w-24"
             data-date-selector-target="datePicker"
             data-action="change->date-selector#dateSelected"
             data-turbo="false"
             data-turbo-frame="false"
             data-turbo-drive="false"
             min="<%= Date.current.to_s %>">
    </div>
    <button class="h-10 px-4 rounded-[20px] border border-gray-200 bg-white shadow-[0_2px_4px_rgba(0,0,0,0.05)] flex items-center gap-2" data-turbo="false">
      <%= render "shared/icons/week_view" %>
      Week View
    </button>
    <%= link_to new_booking_path, class: "h-10 px-4 rounded-[20px] bg-[#3366FF] text-white flex items-center gap-2", data: { turbo: false } do %>
      <%= render "shared/icons/add_event" %>
      Add Event
    <% end %>
  </div>
</div> 