<p style="color: green"><%= notice %></p>

<!-- แสดงข้อมูลห้อง -->
<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-bold mb-6">ข้อมูลห้อง</h1>
      
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Name:</span>
          <span class="font-medium"><%= @room.name %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Capacity:</span>
          <span class="font-medium"><%= @room.capacity %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Description:</span>
          <span class="font-medium"><%= @room.description %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Status:</span>
          <span class="font-medium"><%= @room.status.status_name %></span>
        </div>
      </div>

      <div class="mt-8 space-x-4 flex items-center">
        <%= link_to "Edit this room", edit_room_path(@room), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <%= link_to "Back to rooms", rooms_path, class: "text-gray-600 hover:text-gray-800" %>
        <%= link_to "ดู QR Code", room_qr_code_path(@room), class: "bg-violet-500 text-white px-4 py-2 rounded hover:bg-violet-600" %>
      </div>

      <div class="mt-6">
        <%= button_to "Destroy this room", @room, method: :delete, class: "text-red-500 hover:text-red-700", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>
