<% content_for :title, "Rooms" %>

<% if notice.present? %>
  <p class="text-green-500 font-semibold text-center mb-4"><%= notice %></p>
<% end %>

<h1 class="text-3xl font-bold text-center mb-6">Rooms</h1>

<div id="rooms" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @rooms.each do |room| %>
    <div class="bg-white shadow-md rounded-lg p-4">
      <%= render room %>
      <p class="mt-2">
        <%= link_to "Show this room", room, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-6 text-center">
  <%= link_to "New Room", new_room_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md transition duration-200" %>
</div>
