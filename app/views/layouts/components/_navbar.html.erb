<nav class="fixed top-0 z-50 w-full bg-gray-900 backdrop-blur-lg bg-opacity-80 border-b border-[#1F1F1F]">
  <div class="container mx-auto">
    <div class="flex items-center justify-between h-20 px-8">
      <!-- Logo -->
      <a href="<%= root_path %>" class="flex items-center space-x-8 group pl-4">
        <%= render 'icon/logo', class: "w-12 h-12 text-white opacity-90 group-hover:opacity-100 transition-opacity" %>
        <span class="text-lg font-semibold tracking-wide text-white opacity-90 group-hover:opacity-100 transition-opacity whitespace-nowrap mr-4">SYNC</span>
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <%= link_to root_path, class: "relative px-4 py-2 text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
          <span>Home</span>
          <span class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-violet-500 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
        <% end %>

        <% if current_user&.role == 'admin' %>
          <%= link_to rooms_path, class: "px-4 py-2 text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
            Rooms
          <% end %>
          <%= link_to statuses_path, class: "px-4 py-2 text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
            Room Status
          <% end %>
        <% end %>

        <%= link_to bookings_path, class: "px-4 py-2 text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
          Booking
        <% end %>
        <%= link_to new_check_in_path, class: "px-4 py-2 text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
          Check In
        <% end %>
      </div>

      <!-- Profile/Auth -->
      <div class="flex items-center space-x-6 pr-4">
        <% if user_signed_in? %>
          <div class="flex items-center space-x-5">
            <%= link_to edit_user_registration_path, class: "flex items-center" do %>
              <div class="relative group">
                <div class="w-10 h-10 rounded-full overflow-hidden ring-2 ring-violet-500/30 group-hover:ring-violet-500 transition-all duration-300 shadow-lg">
                  <% if current_user.avatar.attached? %>
                    <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
                  <% else %>
                    <img class="w-full h-full object-cover" 
                         src="https://ui-avatars.com/api/?name=<%= current_user.email.split('@').first %>&background=1a1a1a&color=fff&bold=true" 
                         alt="Profile">
                  <% end %>
                </div>
              </div>
            <% end %>
            <%= button_to destroy_user_session_path, method: :delete, class: "text-[15px] font-medium text-gray-400 hover:text-white transition-colors" do %>
              Sign out
            <% end %>
          </div>
        <% else %>
          <%= link_to new_user_session_path, class: "inline-flex items-center justify-center px-4 py-2 text-[15px] font-semibold text-white bg-violet-600 hover:bg-violet-700 rounded-lg transition-colors" do %>
            Sign in
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer for fixed navbar -->
<div class="h-20"></div>

