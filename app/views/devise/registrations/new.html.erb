<h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :username, class: "text-gray-700 font-medium" %>
      <%= f.text_field :username, 
          autofocus: true, 
          class: "mt-1 px-4 py-2 border rounded-md focus:ring focus:ring-violet-300 focus:outline-none #{resource.errors[:username].any? ? 'border-red-500' : ''}" %>
      <% if resource.errors[:username].any? %>
        <p class="mt-1 text-sm text-red-500"><%= resource.errors[:username].join(", ") %></p>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :email, class: "text-gray-700 font-medium" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          class: "mt-1 px-4 py-2 border rounded-md focus:ring focus:ring-violet-300 focus:outline-none #{resource.errors[:email].any? ? 'border-red-500' : ''}" %>
      <% if resource.errors[:email].any? %>
        <p class="mt-1 text-sm text-red-500"><%= resource.errors[:email].join(", ") %></p>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-700 font-medium" %>
      <% if @minimum_password_length %>
        <div class="text-sm text-gray-600 mb-2">Min <%= @minimum_password_length %> chars (a-z, A-Z, 0-9)</div>
      <% end %>
      <%= f.password_field :password, 
          autocomplete: "new-password", 
          class: "mt-1 px-4 py-2 border rounded-md focus:ring focus:ring-violet-300 focus:outline-none #{resource.errors[:password].any? ? 'border-red-500' : ''}" %>
      <% if resource.errors[:password].any? %>
        <p class="mt-1 text-sm text-red-500"><%= resource.errors[:password].join(", ") %></p>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "text-gray-700 font-medium" %>
      <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", 
          class: "mt-1 px-4 py-2 border rounded-md focus:ring focus:ring-violet-300 focus:outline-none #{resource.errors[:password_confirmation].any? ? 'border-red-500' : ''}" %>
      <% if resource.errors[:password_confirmation].any? %>
        <p class="mt-1 text-sm text-red-500"><%= resource.errors[:password_confirmation].join(", ") %></p>
      <% end %>
    </div>

    <div class="mt-4">
      <%= f.submit "Sign up", class: "w-full bg-violet-500 hover:bg-violet-600 text-white font-bold py-2 px-4 rounded-md transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
